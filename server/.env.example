# MeshCore Coverage Map - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
# NOTE: These must match the POSTGRES_* values in docker-compose.yml
DB_HOST=localhost
DB_PORT=5432
DB_NAME=meshmap
DB_USER=meshmap
DB_PASSWORD=meshmap_dev

# Server Configuration
PORT=3000
HTTPS_PORT=3443
NODE_ENV=development

# Location Validation (optional)
# Center position in "lat,lon" format
# Default: San Jose, CA (37.3382, -121.8863)
CENTER_POS=37.3382,-121.8863
# Maximum distance in miles from center (0 = no limit, default: 0)
MAX_DISTANCE_MILES=0

# Automated Maintenance Tasks
# Consolidate old samples into coverage
CONSOLIDATE_ENABLED=true
CONSOLIDATE_SCHEDULE=0 2 * * *
CONSOLIDATE_MAX_AGE_DAYS=14

# Cleanup stale repeaters
CLEANUP_ENABLED=true
CLEANUP_SCHEDULE=0 3 * * 0
